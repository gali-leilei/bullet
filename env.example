# Bullet Configuration Example
# Copy this file to .env and modify as needed

# Server settings
HOST=0.0.0.0
PORT=5032
LOG_LEVEL=INFO
BASE_URL=http://localhost:5032

# MongoDB
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=bullet

# Session & Auth
SECRET_KEY=your-secret-key-change-in-production
SESSION_COOKIE_NAME=bullet_session
SESSION_MAX_AGE=604800

# Initial admin (created on first startup if no users exist)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme
ADMIN_EMAIL=admin@localhost

# Resend email channel (optional)
RESEND_API_KEY=
RESEND_FROM_EMAIL=

# Twilio SMS channel (optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# Escalation settings
ESCALATION_CHECK_INTERVAL=60

